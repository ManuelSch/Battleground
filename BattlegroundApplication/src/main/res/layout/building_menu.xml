<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="buildingPrices" type="ims.tuwien.ac.at.battleground.game.util.Constants"/>
    </data>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:id="@+id/game_menu_objects_area">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:id="@+id/wallArea">
                <ImageButton
                    android:id="@+id/imageViewWallButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/wall_button"
                    android:layout_marginBottom="0dp"
                    android:background="?android:attr/selectableItemBackground"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/font_size_small"
                    android:text="@{String.valueOf(buildingPrices.WALL_PRICE)}"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/font_size_small"
                    android:text="@string/txt_wall_button"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:id="@+id/turretArea">
                <ImageButton
                    android:id="@+id/imageViewTurretButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/turret_button"
                    android:layout_marginBottom="0dp"
                    android:background="?android:attr/selectableItemBackground"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/font_size_small"
                    android:text="@{String.valueOf(buildingPrices.TURRET_PRICE)}"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/font_size_small"
                    android:text="@string/txt_turret_button"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:id="@+id/rocketTowerArea">
                <ImageButton
                    android:id="@+id/imageViewRocketTowerButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/rockettower_button"
                    android:padding="0dp"
                    android:layout_margin="0dp"
                    android:background="?android:attr/selectableItemBackground"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/font_size_small"
                    android:text="@{String.valueOf(buildingPrices.ROCKET_TOWER_PRICE)}"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/font_size_small"
                    android:text="@string/txt_rockettower_button"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:id="@+id/flakTowerArea">
                <ImageButton
                    android:id="@+id/imageViewFlakTowerButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/flaktower_button"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0dp"
                    android:background="?android:attr/selectableItemBackground"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/font_size_small"
                    android:text="@{String.valueOf(buildingPrices.FLAK_TOWER_PRICE)}"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/font_size_small"
                    android:text="@string/txt_flaktower_button"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>